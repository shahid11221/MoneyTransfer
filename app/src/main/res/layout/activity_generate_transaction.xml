<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activities.GenerateTransaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/b7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_margin="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="800dp"
                        android:orientation="vertical"
                        android:weightSum="16">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="25sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:text="New Transaction"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="25sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Sender Detail:"
                            android:gravity="bottom"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/sender_name_et"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:hint="Sender Name"
                            android:paddingLeft="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:inputType="textPersonName"
                            android:singleLine="true"/>

                        <br.com.sapereaude.maskedEditText.MaskedEditText
                            android:id="@+id/sender_cnic_et"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:hint="#####-#######-#"
                            app:mask="#####-#######-#"
                            android:textColor="#fff"
                            android:drawablePadding="5dp"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:digits="1234567890"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:inputType="number"/>

                        <EditText
                            android:id="@+id/sender_phone_number_et"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:hint="Phone Number"
                            android:paddingLeft="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:singleLine="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Receiver Detail:"
                            android:gravity="bottom"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/receiver_name_et"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:hint="Receiver Name"
                            android:paddingLeft="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:inputType="textPersonName"
                            android:singleLine="true"/>

                        <br.com.sapereaude.maskedEditText.MaskedEditText
                            android:id="@+id/receiver_cnic_et"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:hint="#####-#######-#"
                            app:mask="#####-#######-#"
                            android:textColor="#fff"
                            android:drawablePadding="5dp"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:digits="1234567890"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:inputType="number"/>

                        <EditText
                            android:id="@+id/receiver_phone_number_et"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:hint="Phone Number"
                            android:paddingLeft="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:singleLine="true"/>

                        <Spinner
                            android:id="@+id/reciving_branch"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Money Detail:"
                            android:gravity="bottom"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:hint="Enter Amount"
                            android:paddingLeft="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:digits="0123456789."
                            android:singleLine="true"/>

                        <Spinner
                            android:id="@+id/currency_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:layout_marginTop="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/total_amount"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:hint="Total Amount"
                                android:paddingLeft="15dp"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:paddingTop="12dp"
                                android:textSize="15sp"
                                android:singleLine="true"/>

                            <Button
                                android:id="@+id/refresh_amount"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_gravity="center"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:drawableLeft="@drawable/ic_baseline_refresh_24"
                                android:paddingLeft="45dp"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                android:textAllCaps="false"
                                style="@style/Widget.AppCompat.Button.Colored"/>

                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5" />


                        <Button
                            android:id="@+id/generate_transaction"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:text="Generate"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            style="@style/Widget.AppCompat.Button.Colored"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>